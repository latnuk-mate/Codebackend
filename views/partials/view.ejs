<body>
    <section class="authorDetails mb-4">
            <h4 class="fst-italic fw-bold mb-3">AuthorName: <%= author.AuthorName %></h4>
         <div class="d-flex align-items-center">
            <a href="/author/edit/<%= author.id%>" class="btn btn-outline-secondary px-lg-3 py-lg-1 me-2">edit</a>
            <form action="/author/delete/<%= author.id %>?_method=DELETE" method="post">
                <button type="submit" class="btn btn-outline-danger px-lg-3 py-lg-1 me-2">Delete</button>
              </form>
         </div>
    </section>
  <div class="Author-registered-books">
    <% if(books.length > 0){ %>
        <h5 class="mb-3">Author's Registered Books</h5>
<% books.forEach(book => { %>
<a href="/books/<%= book.id %>">
    <img src="<%= book.imagePath %>" alt="alternative images" width="100" height="130">
</a>
<% }) }%>
 </div>
</body>
</html>